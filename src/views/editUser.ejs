<h1>Edit User: <%= data.rows.username %></h1> 
<form action="/update-user/<%= data.rows.username %>" method="POST">
    <table class="table">
        <tbody class="table-group-divider">
            <tr>
                <th scope="col">Username</th>
                <td>
                    <input type="text" name="username" value="<%= data.rows.username %>" readonly>
                </td>
            </tr>
            <tr>
                <th scope="col">Password</th>
                <td>
                    <input type="text" name="password" value="<%= data.rows.password %>" readonly>
                </td>
            </tr>
            <tr>
                <th scope="col">Fullname</th>
                <td>
                    <input type="text" name="fullname" value="<%= data.rows.fullname %>" required>
                </td>
            </tr>
            <tr>
                <th scope="col">Address</th>
                <td>
                    <input type="text" name="address" value="<%= data.rows.address %>" required>
                </td>
            </tr>
            <tr>
                <th scope="col">Sex</th>
                <td>
                    <select name="sex" required>
                        <option value="Nam" <%= data.rows.sex === 'Nam' ? 'selected' : '' %>>Male</option>
                        <option value="Nữ" <%= data.rows.sex === 'Nữ' ? 'selected' : '' %>>Female</option>
                        <option value="Khác" <%= data.rows.sex === 'Khác' ? 'selected' : '' %>>Other</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th scope="col">Email</th>
                <td>
                    <input type="email" name="email" value="<%= data.rows.email %>" required>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <button type="submit" class="btn btn-primary">Update User</button>
                </td>
            </tr>
        </tbody>
    </table>
</form>
