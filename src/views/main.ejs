<!-- sản phẩm -->


<div id="formSP"
    style="display: none; justify-content: center; align-items: center; width: 100%; height: 100%; margin-top: 10px;">

    <form class="border p-5 w-50" style="height: 650px; position: relative;" method="post"
        enctype="multipart/form-data">
        <button id="close_sp" type="button" class="close" aria-label="Close"
            style="position: absolute; top: 10px; right: 20px;">
            <span aria-hidden="true">&times;</span>
        </button>
        <div style="display: flex; justify-content: center;">
            <span style="font-weight: bold;"> Nhập Sản phẩm</span>

        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Mã sản phẩm</label>
